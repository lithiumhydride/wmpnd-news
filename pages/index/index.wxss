/* pages/index/index.wxss */
.news-type-list {
  position: fixed;
  z-index: 2;
  top: 0;
  width: 750rpx;
  display: flex;
  color: rgba(255, 255, 255, 0.8);
  background-color: #34A0E0;
  height: 60rpx;
}

.news-type {
  flex: 1;
  margin-top: 5rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: center;
}

.news-type .on-focus {
  font-size: 32rpx;
  line-height: 45rpx;
  font-weight: bold; 
  color: rgba(255, 255, 255, 1.0);
}

.news-list-scroll {
  margin-top: 60rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.news-warrper {
  display: flex;
  width: 700rpx;
  margin: 25rpx;
  padding-bottom: 10rpx;
  text-align: center;
  border-bottom: solid  2rpx rgba(50, 50, 50, 0.1);
}

.hot.news-warrper {
  flex-direction: column-reverse; 
}

.hot .title-warrper {
  position: absolute;
  width: 680rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: lightgray;
}

.hot .source-warrper {
  color: lightgray;
}

.hot .news-image {
  width: 700rpx;
  height: 425rpx;
  z-index: -1;
}

.title-warrper {
  width: 500rpx;
  margin-right: 20rpx;
}

.news-title {
  font-size: 32rpx;
  line-height: 45rpx;
  text-align: left;
}

.source-warrper {
  display: flex;
  margin: 10rpx 0;
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(80, 80, 80, 0.6);
}

.news-date {
  margin-left: 25rpx;
}

.news-image {
  height: 120rpx;
  width: 180rpx;
  border-radius: 8rpx;
}