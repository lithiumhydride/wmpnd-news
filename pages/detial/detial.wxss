/* pages/detial/detial.wxss */
.news-title {
  font-size: 42rpx;
  line-height: 59rpx;
  padding: 40rpx 30rpx 20rpx;
  border-top: solid 2rpx rgba(52, 160, 224, 0.8);
}

.news-attr {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  line-height: 33.6rpx;
  color: rgba(50, 50, 50, 0.6);
}

.attr-left {
  flex: 1;
  display: flex;
}

.news-src {
  margin: 0 30rpx;
}

.attr-right {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}

.news-read-count {
  margin: 0 30rpx 0 15rpx;
}

.content-warrper {
  display: flex;
  flex-direction: column;
  margin: 60rpx 30rpx 30rpx;
}

.content {
  font-size: 27rpx;
  line-height: 44rpx;
  margin: 10rpx 0;
}

strong {
  font-weight: bold;
}

image {
  width: 100%;
}